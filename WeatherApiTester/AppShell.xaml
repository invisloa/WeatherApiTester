<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApiTester.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApiTester"
    xmlns:views="clr-namespace:WeatherApiTester.Views"

    >

    <FlyoutItem Title="SomeTitle" x:Name="WeatherFlyout">
        <ShellContent Icon="appicon.svg"
            Title="Dashboart"
            ContentTemplate="{DataTemplate views:WeatherPage}"
            Route="Dashboart" />
        <ShellContent Icon="appicon.svg"
            Title="Dashboar22t"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="Dashboa22rt" />
        <ShellContent Icon="appicon.svg"
            Title="Dashboar2"
            ContentTemplate="{DataTemplate views:WeatherCurrent}"
            Route="Dashboa2" />
    </FlyoutItem>
</Shell>
