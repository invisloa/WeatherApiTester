<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApiTester.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApiTester"
    xmlns:views="clr-namespace:WeatherApiTester.Views"

    >

    <FlyoutItem Title="SomeTitle">
        <ShellContent Icon="appicon.svg"
            Title="Dashboart"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="Dashboart" />

        <ShellContent Icon="settings.png"
            Title="Home"
            ContentTemplate="{DataTemplate views:WeatherPage}"
            Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="SomeTitle2">
        <ShellContent Icon="appicon.svg"
            Title="d2"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="Dashboart" />

        <ShellContent Icon="settings.png"
            Title="d1"
            ContentTemplate="{DataTemplate views:WeatherPage}"
            Route="MainPage" />
    </FlyoutItem>
</Shell>
